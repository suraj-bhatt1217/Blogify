{
  "version": 2,
  "builds": [
    {
      "src": "blogify-backend/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "blogify-fe/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "blogify-backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "blogify-fe/$1"
    }
  ]
}
